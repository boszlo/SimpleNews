<%= form_for(@article, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @article.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h4>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    
      <%= f.label :title, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :body, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :body, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <div class="col-sm-offset-2 col-sm-10"> 
        <div class="checkbox">
          <label>
            <%= f.check_box :featured %>
            Featured      
          </label>
        </div>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :readcount, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :readcount, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :rating, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :rating, class: "form-control" %>
      </div>
    
  </div>

  <div class="form-group">
    
      <%= f.label :category, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.select(:category_id, Category.all.map {|c| [c.category_name,c.id]}, {:include_blank => true}) %>
      </div>

  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
