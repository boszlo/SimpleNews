<div class="page-header">
  <%= link_to articles_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_article_path(@article), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1><%= @article.title %></h1>
</div>


<div class="artcile-content">
  <p><%= render partial: "byline", locals: {authors: @article.authors} %></p> 

  <% if not @article.photo.file.nil? %>
    <%= image_tag @article.photo, class: "img-responsive" %>
    <hr />
  <% end %>

  <section class="article-body"><%= raw @article.body %></section>

  <hr />

  <dl class="dl-horizontal well">
    <dt>Featured:</dt>
    <dd><%= @article.featured %></dd>

    <dt>Published:</dt>
    <dd><%= time_ago_in_words(@article.created_at) %> ago</dd>

    <dt>Readcount:</dt>
    <dd><%= @article.readcount %></dd>

    <dt>Rating:</dt>
    <dd><%= rating_for @article, 'rating', star: 5, disable_after_rate: false %></dd>
  </dl>
</div>
